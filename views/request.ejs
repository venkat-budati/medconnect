<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Request Medicine - MedConnect</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <h1 class="logo">MedConnect</h1>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/donate">Donate Medicine</a>
      <form action="/auth/logout" method="POST" style="display:inline;"><button class="logout-btn">Logout</button></form>
    </nav>
  </header>
  <main class="main-content">
    <section class="browse-section">
      <h2>Available Medicines</h2>
      <% if (success) { %><div class="flash success"><%= success %></div><% } %>
      <% if (error) { %><div class="flash error"><%= error %></div><% } %>
      <div class="medicine-list">
        <% if (medicines.length === 0) { %>
          <p>No medicines available at the moment.</p>
        <% } %>
        <% medicines.forEach(function(med) { %>
          <div class="medicine-card">
            <img src="<%= med.imageUrl %>" alt="<%= med.name %>" class="medicine-img">
            <div class="medicine-info">
              <h3><%= med.name %></h3>
              <p>Quantity: <%= med.quantity %></p>
              <p>Expiry: <%= med.expiry.toISOString().slice(0,10) %></p>
              <form action="/request/<%= med._id %>" method="POST">
                <button type="submit" class="cta-btn">Request</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  </main>
  <footer class="footer">&copy; <%= new Date().getFullYear() %> MedConnect</footer>
</body>
</html> 