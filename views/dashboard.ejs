
<!-- Dashboard Container -->
<div class="dashboard-container" style="padding-top: 0px; margin-top: 0px;">
    <!-- Sidebar will be injected by the layout -->
    <main class="main-content">
        <!-- Welcome Banner -->
        <div class="welcome-card">
            <div class="welcome-content">
                <h2>Welcome back, John!</h2>
                <p>You're making a difference by helping reduce medical waste and providing essential medicines to those in need. Keep up the great work!</p>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon-card icon-donate">
                    <i class="fas fa-pills"></i>
                </div>
                <div class="stat-details">
                    <div class="stat-number">24</div>
                    <div class="stat-title">Medicines Donated</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon-card icon-receive">
                    <i class="fas fa-hand-holding-medical"></i>
                </div>
                <div class="stat-details">
                    <div class="stat-number">8</div>
                    <div class="stat-title">Medicines Received</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon-card icon-pending">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-details">
                    <div class="stat-number">3</div>
                    <div class="stat-title">Pending Requests</div>
                </div>
            </div>
        </div>

        <!-- Medicines Donated Section -->
        <div class="content-section">
            <div class="section-header">
                <h3 class="section-title">Medicines You've Donated</h3>
                <a href="#" class="view-all">View All <i class="fas fa-arrow-right"></i></a>
            </div>
            <div class="medicines-grid">
                <!-- Medicine Card 1 -->
                <div class="medicine-card">
                    <div class="medicine-image">
                        <i class="fas fa-capsules"></i>
                        <div class="medicine-status status-accepted">Accepted</div>
                    </div>
                    <div class="medicine-details">
                        <h4 class="medicine-name">Paracetamol 500mg</h4>
                        <div class="medicine-info">
                            <div class="medicine-quantity">
                                <i class="fas fa-capsules"></i> 20 tablets
                            </div>
                            <div class="medicine-expiry">
                                <i class="fas fa-calendar"></i> Dec 2024
                            </div>
                        </div>
                        <div class="card-actions">
                            <button class="action-button btn-details">Details</button>
                            <button class="action-button btn-request">Track</button>
                        </div>
                    </div>
                </div>
                
                <!-- Medicine Card 2 -->
                <div class="medicine-card">
                    <div class="medicine-image">
                        <i class="fas fa-pills"></i>
                        <div class="medicine-status status-pending">Pending</div>
                    </div>
                    <div class="medicine-details">
                        <h4 class="medicine-name">Vitamin C</h4>
                        <div class="medicine-info">
                            <div class="medicine-quantity">
                                <i class="fas fa-capsules"></i> 30 capsules
                            </div>
                            <div class="medicine-expiry">
                                <i class="fas fa-calendar"></i> Mar 2025
                            </div>
                        </div>
                        <div class="card-actions">
                            <button class="action-button btn-details">Details</button>
                            <button class="action-button btn-request">Edit</button>
                        </div>
                    </div>
                </div>
                
                <!-- Medicine Card 3 -->
                <div class="medicine-card">
                    <div class="medicine-image">
                        <i class="fas fa-tablets"></i>
                        <div class="medicine-status status-completed">Completed</div>
                    </div>
                    <div class="medicine-details">
                        <h4 class="medicine-name">Amoxicillin</h4>
                        <div class="medicine-info">
                            <div class="medicine-quantity">
                                <i class="fas fa-capsules"></i> 15 capsules
                            </div>
                            <div class="medicine-expiry">
                                <i class="fas fa-calendar"></i> Oct 2023
                            </div>
                        </div>
                        <div class="card-actions">
                            <button class="action-button btn-details">Details</button>
                            <button class="action-button btn-request">Review</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Requests Section -->
        <div class="content-section">
            <div class="section-header">
                <h3 class="section-title">Your Medicine Requests</h3>
                <a href="#" class="view-all">View All <i class="fas fa-arrow-right"></i></a>
            </div>
            <table class="requests-table">
                <thead>
                    <tr>
                        <th>Medicine</th>
                        <th>Quantity</th>
                        <th>Date Requested</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table-row">
                        <td>
                            <div class="medicine-cell">
                                <div class="table-med-image">
                                    <i class="fas fa-pills"></i>
                                </div>
                                <div>
                                    <div class="medicine-name">Metformin 500mg</div>
                                    <div class="medicine-expiry">Exp: Aug 2024</div>
                                </div>
                            </div>
                        </td>
                        <td>30 tablets</td>
                        <td>Jul 25, 2023</td>
                        <td><span class="status-badge status-pending">Pending</span></td>
                        <td><button class="action-button btn-details">Details</button></td>
                    </tr>
                    <tr class="table-row">
                        <td>
                            <div class="medicine-cell">
                                <div class="table-med-image">
                                    <i class="fas fa-capsules"></i>
                                </div>
                                <div>
                                    <div class="medicine-name">Lisinopril 10mg</div>
                                    <div class="medicine-expiry">Exp: Nov 2024</div>
                                </div>
                            </div>
                        </td>
                        <td>20 tablets</td>
                        <td>Jul 18, 2023</td>
                        <td><span class="status-badge status-accepted">Accepted</span></td>
                        <td><button class="action-button btn-details">Track</button></td>
                    </tr>
                    <tr class="table-row">
                        <td>
                            <div class="medicine-cell">
                                <div class="table-med-image">
                                    <i class="fas fa-tablets"></i>
                                </div>
                                <div>
                                    <div class="medicine-name">Atorvastatin 20mg</div>
                                    <div class="medicine-expiry">Exp: Feb 2025</div>
                                </div>
                            </div>
                        </td>
                        <td>45 tablets</td>
                        <td>Jul 10, 2023</td>
                        <td><span class="status-badge status-completed">Completed</span></td>
                        <td><button class="action-button btn-details">Review</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>

<script>
    // Dashboard interactions
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle active state for nav items
        const navItems = document.querySelectorAll('.nav-item');
        navItems.forEach(item => {
            item.addEventListener('click', function(e) {
                navItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Card hover animations
        const cards = document.querySelectorAll('.stat-card, .medicine-card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
        
        // Button interactions
        const buttons = document.querySelectorAll('.action-button, .donate-button');
        buttons.forEach(button => {
            button.addEventListener('click', function() {
                const text = this.textContent.toLowerCase();
                if(text.includes('donate')) {
                    alert('Opening medicine donation form...');
                } else if(text.includes('details') || text.includes('track') || text.includes('review')) {
                    alert(`Viewing details for this ${text.includes('details') ? 'donated' : 'requested'} medicine`);
                } else if(text.includes('edit')) {
                    alert('Edit donation details');
                }
            });
        });
        
        // Notification bell
        const notification = document.querySelector('.notifications');
        notification.addEventListener('click', function() {
            alert('You have 3 new notifications');
        });
    });
</script>