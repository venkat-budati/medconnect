    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const requestsTab = document.getElementById('requestsTab');
            const historyTab = document.getElementById('historyTab');
            const donationHistory = document.getElementById('donationHistory');
            
            // Tab switching functionality
            requestsTab.addEventListener('click', function() {
                requestsTab.classList.add('active');
                historyTab.classList.remove('active');
                document.querySelector('.requests-section').style.display = 'block';
                donationHistory.style.display = 'none';
            });
            
            historyTab.addEventListener('click', function() {
                historyTab.classList.add('active');
                requestsTab.classList.remove('active');
                document.querySelector('.requests-section').style.display = 'none';
                donationHistory.style.display = 'block';
            });
            
            // Action button functionality
            const acceptButtons = document.querySelectorAll('.btn-accept');
            const rejectButtons = document.querySelectorAll('.btn-reject');
            const completeButtons = document.querySelectorAll('.btn-complete');
            const failedButtons = document.querySelectorAll('.btn-failed');
            
            acceptButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const card = this.closest('.request-card');
                    const medicineName = card.querySelector('.medicine-name').textContent;
                    const statusBadge = card.querySelector('.status-badge');
                    
                    // Change status to accepted
                    statusBadge.textContent = 'Accepted';
                    statusBadge.className = 'status-badge status-accepted';
                    
                    // Change action buttons to completed/failed
                    const actionButtons = card.querySelector('.action-buttons');
                    actionButtons.innerHTML = `
                        <button class="action-button btn-complete">Completed</button>
                        <button class="action-button btn-failed">Failed</button>
                    `;
                    
                    // Add event listeners to new buttons
                    actionButtons.querySelector('.btn-complete').addEventListener('click', completeDonation);
                    actionButtons.querySelector('.btn-failed').addEventListener('click', failDonation);
                    
                    alert(`You accepted the request for ${medicineName}. Please arrange pickup with the requester.`);
                });
            });
            
            rejectButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const card = this.closest('.request-card');
                    const medicineName = card.querySelector('.medicine-name').textContent;
                    const statusBadge = card.querySelector('.status-badge');
                    
                    // Change status to rejected
                    statusBadge.textContent = 'Rejected';
                    statusBadge.className = 'status-badge status-rejected';
                    
                    alert(`You rejected the request for ${medicineName}. The requester has been notified.`);
                });
            });
            
            function completeDonation() {
                const card = this.closest('.request-card');
                const medicineName = card.querySelector('.medicine-name').textContent;
                const statusBadge = card.querySelector('.status-badge');
                
                // Change status to completed
                statusBadge.textContent = 'Completed';
                statusBadge.className = 'status-badge status-completed';
                
                // Remove action buttons
                card.querySelector('.action-buttons').innerHTML = '';
                
                // Move to history after delay
                setTimeout(() => {
                    card.style.opacity = '0.6';
                }, 1000);
                
                alert(`Successfully completed donation for ${medicineName}! Thank you for your contribution.`);
            }
            
            function failDonation() {
                const card = this.closest('.request-card');
                const medicineName = card.querySelector('.medicine-name').textContent;
                const statusBadge = card.querySelector('.status-badge');
                
                // Change status to failed
                statusBadge.textContent = 'Failed';
                statusBadge.className = 'status-badge status-failed';
                
                alert(`Marked donation for ${medicineName} as failed. Please contact support if you need assistance.`);
            }
            
            // Attach event listeners to existing buttons
            document.querySelectorAll('.btn-complete').forEach(button => {
                button.addEventListener('click', completeDonation);
            });
            
            document.querySelectorAll('.btn-failed').forEach(button => {
                button.addEventListener('click', failDonation);
            });
        });
    </script>